<section class="home">
<%= render partial: 'shared/head', locals: { back: "Back", back_path: root_path } %>
<div class="container-fluid bg-white d-flex flex-row justify-content-center align-items-center p-1">
<h4>Total Cash:</h4>
<h4><b><%= @total_amount %></b> $</h4>
</div>
<div class="group px-5 d-flex align-items-center flex-column">
<h1 class="custom_color">Your Catogeries</h1>
<div class="card w-50">
<ul class="card list-group">
<% if @items.present? %>
<% @items.each do |item| %>
    <li class="px-2 list-group-item d-flex justify-content-between align-items-center col-12"> 
    <div class=" d-flex justify-content-between align-items-center col-8">
    <div class="d-flex align-items-center gap-1">
    <% if item.icon.attached? %>
    <%= image_tag item.icon, class: "img-item" %> 
    <% end %>
    <h5><%= link_to item.name, user_group_path(current_user,id: item.id), class: "text-decoration-none text-primary" %></h5>
    </div></div> <div class="d-flex flex-column col-2"><span class="fs-2">
    <%= item.cashes.map { |item| item.amount }.sum %> $
  </span>
     <span class="text-primary date"><b class="text-dark px-2">Date: </b><%= item.created_at.strftime('%B-%d-%Y') %></span>
     </div></li>
    <% end %>
    <% else %>

    <p>No item.</p>

<% end %>
</ul>
</div>
</div>
<div class="button"><%= render partial: 'shared/button', locals: {button_text:"Add New Category", button_path:new_user_group_path(current_user)} %></div>
</section>
<%= render partial: 'shared/head', locals: { back: "Go back", back_path: root_path } %>
<div class="d-flex justify-content-center">
  <div class="w-50">
    <div class='top d-flex flex-row align-items-center justify-content-between p-2'>
      <h1 class="text-center text-dark"><%= image_tag @group.icon, class: "small-icon" %><%= @group.name %></h1>
      <h2><%= @cashes.map { |item| item.amount }.sum %> $</h2>
    </div>
    <div class="items-container p-2">
      <ul class="card list-group">
        <% @cashes.each do |cash| %>
        <li class="list-group-item d-flex flex-row justify-content-between align-items-center">
          <div class="fs-4">
            <%= link_to cash.name, user_group_cash_path(current_user, @group, cash.id), class: "text-decoration-none text-primary" %>
          </div>
          <div class="d-flex flex-column align-items-center">
            <h4 class="fs-4"><%= cash.amount %> $</h4>
            <span class="text-primary"><b class="text-dark px-2">Date: </b><%= cash.created_at.strftime('%B-%d-%Y') %></span>
          </div>
        </li>
        <% end %>
      </ul>
    </div>
    <div class="button">
      <%= render partial: 'shared/button', locals: { button_text: "Add New", button_path: new_user_group_cash_path(current_user, @group) } %>
    </div>
  </div>
</div>
